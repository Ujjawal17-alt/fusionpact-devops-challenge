cat > monitoring/grafana/dashboards_json/app_infra_dashboard.json <<'EOF'
{
  "title": "Fusionpact App Dashboard",
  "panels": [
    {
      "type": "graph",
      "title": "Request Rate",
      "targets": [{"expr": "sum(rate(http_requests_total[1m])) by (endpoint)"}]
    },
    {
      "type": "graph",
      "title": "Request Latency (p95)",
      "targets": [{"expr": "histogram_quantile(0.95, sum(rate(http_request_latency_seconds_bucket[1m])) by (le, endpoint))"}]
    }
  ]
}
EOF

